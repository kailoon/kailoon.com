<section id="works" class="pb-24 md:pb-36">
  <div class="px-5 max-w-screen-xl lg:mx-auto">
    <div class="py-10 grid gap-x-2 gap-y-5 sm:gap-y-8 grid-cols-1 md:grid-cols-1 md:grid-flow-row-dense">

      <div class="md:col-span-2">
        {# <h3 class="text-rose-700 mb-10 text-sm font-bold tracking-widest uppercase dark:text-gray-400">{{ data.featuredWorkTitle }}</h3> #}
        <span class="block text-xl tracking-tight text-gray-700 dark:text-gray-300 mb-10 md:w-2/3">
        {{ data.featuredWorkDescription }}
        </span>
      </div>

      {% for item in collections.works | reverse%}
        {% if item.data.featured and item.data.publish %}
          <a
          href="{{item.url}}"
          title="view {{item.data.title}}"
          class="col-span-3 post bg-gray-800 relative md:transform md:hover:-translate-y-2 md:transition-transform"
          >
            <article class="flex sm:flex-row flex-col" style="background-color: #{{item.data.bgColor}}">
            <header class="sm:w-2/5 p-8 lg:p-16">
              <span class="text-gray-800 text-3xl tracking-tighter font-bold block">{{ item.data.title }}</span>
              <span class="text-gray-600 text-base font-normal">{{ item.data.tasks }}</span>
            </header>
            <picture class="block sm:w-3/5 ">
            {% respimg item.data.featuredImg, item.data.title %}
            </picture>
            </article>
          </a>
        {% endif %}
      {% endfor %}

    </div>
  </div>
</section>